#!/usr/bin/env bash
set -euo pipefail

GREEN=`tput -Txterm setaf 2`
YELLOW=`tput -Txterm setaf 3`
WHITE=`tput -Txterm setaf 7`
RESET=`tput -Txterm sgr0`

export CCPF_HOME="${CCPF_HOME:-/opt/command-center-publishing-framework}"
export CCPF_LIB_PATH=$CCPF_HOME/lib

export CCPF_PROJECT_HOME=`pwd`

echo "Creating CCPF Project in $YELLOW${CCPF_PROJECT_HOME}$RESET."
echo "Symlinking ./Makefile -> $YELLOW${CCPF_LIB_PATH}/Makefile$RESET."
ln -s $CCPF_LIB_PATH/Makefile Makefile

make doctor